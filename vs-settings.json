{
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.detectIndentation": false,
  "editor.dragAndDrop": false,
  "editor.folding": false,
  "editor.fontFamily": "Dank Mono, JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.formatOnPaste": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.lineHeight": 25,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.overviewRulerBorder": false,
  "editor.parameterHints.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 100, 120],
  "editor.scrollBeyondLastLine": true,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.useTabStops": true,
  "editor.renderControlCharacters": false,
  "diffEditor.ignoreTrimWhitespace": false,
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  // Workbench
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.colorTheme": "Night Owl",
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.openPositioning": "last",
  "workbench.sideBar.location": "right",
  // Window
  "window.newWindowDimensions": "inherit",
  "window.zoomLevel": 0,
  // Files
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.svg": true
  },
  //Terminal
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.rendererType": "dom",
  // Search
  "search.exclude": {
    "*.lock": true,
    ".next": true,
    "**/node_modules": true
  },
  // Zen
  "zenMode.centerLayout": false,
  "zenMode.hideTabs": false,
  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // Extensions
  "extensions.ignoreRecommendations": true,
  // Intellisense
  "npm-intellisense.importLinebreak": "\r\n",
  // BracketPairColorizer
  "bracketPairColorizer.forceIterationColorCycle": true,
  "bracketPairColorizer.forceUniqueOpeningColor": true,
  "bracketPairColorizer.showHorizontalScopeLine": false,
  // highlight-matching-tag
  "highlight-matching-tag.highlightFromAttributes": false,
  "highlight-matching-tag.showRuler": false,
  "highlight-matching-tag.showPath": false,
  "highlight-matching-tag.highlightSelfClosing": true,
  // Material
  "material-icon-theme.activeIconPack": "react_redux",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.saturation": 0.5,
  // GitLens
  "gitlens.gitCommands.closeOnFocusOut": true,
  // ESLint
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.trace.server": "messages",
  "eslint.packageManager": "yarn",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  // Prettier
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Tailwind CSS
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "html": "HTML"
  },
  // Headwind
  "headwind.removeDuplicates": true,
  // Stylelint
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false
  // Stylelint
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.packageManager": "yarn"
}
